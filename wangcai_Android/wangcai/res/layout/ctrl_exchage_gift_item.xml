<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    
   <ImageView
		android:id="@+id/type_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="@dimen/common_margin_left"
		 />
	<TextView 
		android:id="@+id/type_name"
		android:text="@string/balance"
		android:textSize="18sp"
		android:textColor="#000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/common_margin_left"
		android:layout_alignTop="@id/type_icon"
		android:layout_toRightOf="@id/type_icon"
	/> 
	<TextView 
		android:id="@+id/extract_price"
		android:text="@string/balance"
		android:textSize="12sp"
		android:textColor="#4E9ED5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/type_name"
		android:layout_marginTop="5dp"
		android:layout_alignLeft="@id/type_name"
	/> 
	<TextView 
		android:id="@+id/recharge_button"
		android:text="@string/exchage_button_text" 
		android:textColor="#B0B0B0"
		android:textSize="18sp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:paddingRight="15dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/extract_price"
		android:layout_marginTop="9dp"
		android:layout_alignLeft="@id/type_name" /> 
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:background="@drawable/line"
		android:layout_marginTop="15dp"
		android:layout_below="@id/recharge_button"/>
 		
</RelativeLayout>
