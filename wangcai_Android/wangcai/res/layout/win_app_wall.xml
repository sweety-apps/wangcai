<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="@color/pop_win_bkg_color">
	<RelativeLayout 
		android:id="@+id/main_client"
		android:layout_width="@dimen/app_wall_width"
		android:layout_height="@dimen/app_wall_height"
		android:layout_centerInParent="true"
		android:background="@drawable/app_win_bkg" >
		<ImageView
			android:background="@drawable/app_wall_title"
			android:scaleType="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			/>
		<RelativeLayout
			android:id="@+id/default_page"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="70dp"
			android:layout_centerHorizontal="true"
			android:orientation="vertical" >
			<TextView
				android:id="@+id/title_text"
				android:text="@string/app_wall_win_title"
				android:textSize="23sp"
				android:textColor="#1E64FF"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
			<TextView
				android:id="@+id/text"
				android:text="@string/app_wall_win_text"
				android:textSize="14sp"
				android:textColor="#333333"
				android:layout_width="@dimen/app_wall_text_width"
				android:layout_height="wrap_content"
				android:layout_below="@id/title_text"
				android:layout_alignLeft="@id/title_text"
				android:layout_marginTop="15dp"
				/>
			<ImageView
				android:id="@+id/important_tip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/app_install_tip"
				android:layout_below="@id/text"
				android:layout_alignLeft="@id/title_text"
				android:layout_marginTop="15dp"
			/>
			<LinearLayout
				android:id="@+id/app_wall_button_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/important_tip"
				android:layout_marginTop="15dp"
				android:orientation="vertical" >
			</LinearLayout>
			<ImageView 
				android:id="@+id/more_button"
				android:src="@drawable/app_tip_more"
				android:layout_width="50dp"
				android:layout_height="30dp"
				android:layout_gravity="center_horizontal"
				android:layout_below="@id/app_wall_button_container"
				android:layout_marginTop="15dp"
				/> 
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/more_appwall_page"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:background="#ffffff"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="65dp" >
			<ImageView 
				android:id="@+id/return_button"
				android:src="@drawable/app_tip_back"
				android:layout_width="50dp"
				android:layout_height="30dp"
				android:layout_marginTop="20dp" 
				android:layout_marginBottom="40dp"
				/> 
		</LinearLayout>
	</RelativeLayout>
	<ImageView 
		android:id="@+id/close_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@id/main_client"
		android:layout_alignTop="@id/main_client"
		android:layout_marginRight="-30px"
		android:layout_marginTop="-20px"
		android:src="@drawable/app_tip_close"
	/> 
</RelativeLayout>