<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/pop_win_bkg_color" >
	<RelativeLayout 
		android:id="@+id/main_client"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:paddingLeft="12dp"
		android:layout_centerInParent="true"
		android:background="@drawable/redbag_mb_bg"
		android:layout_marginTop="@dimen/new_award_tip_top_padding"
		android:layout_marginRight="@dimen/new_award_tip_top_padding">
	
		<TextView 
			android:id="@+id/title"
			android:textColor="#000000"
			android:textSize="24sp"
			android:layout_marginLeft="@dimen/new_award_tip_margin_left"
			android:text="@string/new_app_award_tip_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|right"
		/> 
		<TextView
			android:id="@+id/award_value"
			android:layout_marginLeft="@dimen/new_award_tip_margin_left"
			android:textColor="#FF0000"
			android:textSize="44sp"
			android:layout_alignLeft="@id/title"
			android:layout_below="@id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/award_value_unit"
			android:text="@string/balance_unit"
			android:textColor="#FF0000"
			android:textSize="18sp"
			android:layout_marginBottom="7dp"
			android:layout_alignBottom="@id/award_value"
			android:layout_toRightOf="@id/award_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<LinearLayout
			android:id="@+id/leve_frame"
			android:layout_alignLeft="@id/title"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="@dimen/new_award_tip_margin_left"
			android:layout_below="@id/award_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/level"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_gravity="center_vertical"/>
			<ImageView 
				android:id="@+id/app_wall_grid1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:background="@drawable/redbag_mb_lv_unget"
				android:layout_gravity="center_vertical"
			/> 
			<ImageView 
				android:id="@+id/app_wall_grid2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:background="@drawable/redbag_mb_lv_unget"
				android:layout_gravity="center_vertical"
			/> 
			<ImageView 
				android:id="@+id/app_wall_grid3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:background="@drawable/redbag_mb_lv_unget"
				android:layout_gravity="center_vertical"
			/> 
			<ImageView 
				android:id="@+id/app_wall_grid4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:background="@drawable/redbag_mb_lv_unget"
				android:layout_gravity="center_vertical"
			/> 
			<ImageView 
				android:id="@+id/app_wall_grid5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:background="@drawable/redbag_mb_lv_unget"
				android:layout_gravity="center_vertical"
			/> 
			<TextView
				android:id="@+id/level_benefit"
				android:layout_marginLeft="4dp"
				android:layout_gravity="center_vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<ImageButton android:id="@+id/get_award_button"
			android:layout_marginTop="0dp"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/leve_frame"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/redbag_mb_btn_normal" />
			
	</RelativeLayout>
	<ImageView 
		android:id="@+id/close_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@id/main_client"
		android:layout_alignTop="@id/main_client"
		android:layout_marginRight="-35px"
		android:layout_marginTop="-35px"
		android:src="@drawable/redbag_mb_close"
	/> 
</RelativeLayout>