<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
	android:layout_marginTop="10dp">
    
   <ImageView
		android:id="@+id/main_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginTop="17dp"
		android:layout_marginBottom="17dp"
		android:layout_marginLeft="@dimen/common_margin_left"
		android:layout_marginRight="20dp"
		 />
	 <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/main_item_icon" >
		<TextView 
			android:id="@+id/main_item_title"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
		/> 
		<TextView 
			android:id="@+id/main_item_tip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:textSize="11sp"
		/> 
	</LinearLayout>
	<RelativeLayout
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"	
		android:layout_width="100dp"
		android:layout_height="fill_parent" >
	   <ImageView
			android:id="@+id/main_item_money_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/package_icon_many"
			android:layout_centerInParent="true"
			android:layout_marginRight="@dimen/common_margin_right"	 />
	</RelativeLayout>
	<TextView 
		android:id="@+id/main_item_task_status"
		android:text="@string/task_complete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:visibility="gone"
		android:layout_marginRight="22dp"
	/> 
	<!-- 分割线 -->
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:background="@drawable/line"
		android:layout_marginTop="80dp"
		android:layout_alignParentTop="true" />
</RelativeLayout>
