<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:layout_marginTop="10dp">
    
   <ImageView
		android:id="@+id/main_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		 />
	<TextView 
		android:id="@+id/main_item_title"
		android:text="@string/balance"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/main_item_icon"
	/> 
	<TextView 
		android:id="@+id/main_item_tip"
		android:text="@string/balance"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/main_item_icon"
		android:layout_below="@id/main_item_title"
	/> 
   <ImageView
		android:id="@+id/main_item_money_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|right"
		android:gravity="right"
		 />
	<TextView 
		android:id="@+id/main_item_task_status"
		android:text="@string/task_complete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:layout_alignParentRight="true"
		android:visibility="gone"
	/> 
   <ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:layout_alignParentRight="true"
		 />
</RelativeLayout>
