<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mywangcai_bingdphone_bg"
	 >
    <ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:background="@drawable/mywangcai_bingdphone"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20px" 
	    android:layout_marginLeft="7dp"
        />
   	<TextView
   	    android:textColor="#874E0A"
   	    android:textSize="14sp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_marginTop="20px" 
	    android:layout_marginLeft="45dp"
   	    android:text="@string/bind_phone_hint_text"
		/>
    <ImageButton
        android:id="@+id/bind_phone_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="7dp"
        android:layout_marginTop="12px" 
        android:background="@drawable/mywangcai_bingdphone_btn" />
</RelativeLayout>
