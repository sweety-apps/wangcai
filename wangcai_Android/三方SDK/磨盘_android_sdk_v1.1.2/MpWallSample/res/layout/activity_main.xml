<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
            android:id="@+id/ScoresTextView"  
            android:text="积分"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            android:gravity="center" 
            
            />
    
    <Button android:id="@+id/btn_wall"  
        android:text="积分墙"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content" />	
	
    <Button android:id="@+id/btn_getscores"  
        android:text="查看积分[异步]"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content" />
    
    <Button android:id="@+id/btn_spendscores"  
        android:text="消费10个积分[异步]"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content" />
    
    <Button android:id="@+id/btn_awardscores"  
        android:text="增加10个积分[异步]"  
        android:layout_width="fill_parent"   
        android:layout_height="wrap_content" />
	
	
	<TextView
            android:id="@+id/SdkVersionTextView"   
            android:text="Sdk Version:"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            android:gravity="center" />

</LinearLayout>