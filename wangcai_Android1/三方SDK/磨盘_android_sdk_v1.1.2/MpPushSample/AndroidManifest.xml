<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imopan.mppushsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />
    
     <!-- 磨盘必须-->
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>     
    <!-- 磨盘必须 -->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- 磨盘必须 -->	
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  	<!-- 磨盘必须 -->
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<!-- 磨盘必须 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />	
    <!-- 磨盘必须 -->  
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
	

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.imopan.mppushsample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>            
            
        </activity>
        
        <!-- 磨盘必须 -->
        <service android:name="com.imopan.mppush.MpService"></service>     
        <!-- 磨盘必须 --> 
       	<activity android:name="com.imopan.mppush.MpActivity" android:configChanges="keyboardHidden|orientation"></activity>
       	<!-- 磨盘必须 -->
       	<receiver android:name="com.imopan.mppush.MpReceiver">
           <intent-filter>
				<action android:name="android.intent.action.PACKAGE_ADDED" />
				<data android:scheme="package" />
			</intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter> 
                <action android:name="android.intent.action.BOOT_COMPLETED" /> 
            </intent-filter> 
       </receiver>
       
    </application>

</manifest>