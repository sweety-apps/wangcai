<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:wangcai = "http://schemas.android.com/apk/res/com.coolstore.wangcai"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF" 
	android:orientation="vertical">
	<com.coolstore.wangcai.ctrls.TitleCtrl 
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:orientation="horizontal"
			android:background="@drawable/gray_rect"
			android:paddingLeft="@dimen/common_margin_left"
			android:paddingRight="@dimen/common_margin_right" >
		<ImageView
			android:id="@+id/extract_logo"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 	 
			/>
		<TextView 
			android:id="@+id/extract_item_text"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:layout_marginLeft="10dp" 
		/> 
		<TextView 
			android:id="@+id/extract_item_sub_text"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/gray_text_color"
			android:textSize="12sp"
			android:visibility="gone"
			android:singleLine="true"
			android:ellipsize="end"
			android:layout_marginLeft="6dp" 
		/> 
	</LinearLayout>
	<com.coolstore.wangcai.ctrls.ExtractLineCtrl
		android:id="@+id/line1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<com.coolstore.wangcai.ctrls.ExtractLineCtrl 
		android:id="@+id/line2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />
	<com.coolstore.wangcai.ctrls.ExtractLineCtrl 
		android:id="@+id/line3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<TextView 
		android:layout_marginTop="15dp"
		android:layout_marginLeft="@dimen/common_margin_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:text="@string/extract_label"
	/> 
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:orientation="horizontal">
		<com.coolstore.wangcai.ctrls.ExtractPrieceCtrl 
			android:id="@+id/grid1"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<com.coolstore.wangcai.ctrls.ExtractPrieceCtrl 
			android:id="@+id/grid2"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<com.coolstore.wangcai.ctrls.ExtractPrieceCtrl 
			android:id="@+id/grid3"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
