<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="@color/pop_win_bkg_color">
	<RelativeLayout 
		android:layout_width="@dimen/app_wall_width"
		android:layout_height="@dimen/app_wall_height"
		android:layout_centerInParent="true" >
		<FrameLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/app_tip_bkg"
			android:layout_marginTop="@dimen/app_wall_top_padding"
			android:layout_marginRight="@dimen/app_wall_top_padding">
		
			<LinearLayout
				android:id="@+id/default_page"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="220dp"
				android:layout_marginLeft="@dimen/app_wall_left_margin"
				android:orientation="vertical" >
				<ImageView
					android:id="@+id/important_tip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/app_install_tip"
				/> 
				<LinearLayout
					android:layout_marginTop="10dp"
					android:id="@+id/app_wall_button_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical" >
				</LinearLayout>
				<ImageView 
					android:id="@+id/more_button"
					android:src="@drawable/app_tip_more"
					android:layout_width="50dp"
					android:layout_height="30dp"
					android:layout_marginTop="10dp"
					android:layout_gravity="center_horizontal"
					/> 
			</LinearLayout>
			<LinearLayout
				android:id="@+id/more_appwall_page"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:background="#ffffff"
				android:orientation="vertical"
				android:layout_marginLeft="@dimen/app_wall_left_margin"
				android:layout_marginTop="50dp" >
				<ImageView 
					android:id="@+id/return_button"
					android:src="@drawable/app_tip_back"
					android:layout_width="50dp"
					android:layout_height="30dp"
					android:layout_marginTop="20dp" 
					android:layout_marginBottom="40dp"
					/> 
			</LinearLayout>
		</FrameLayout>
		<ImageView 
			android:id="@+id/close_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:src="@drawable/app_tip_close"
		/> 
	</RelativeLayout>
</RelativeLayout>